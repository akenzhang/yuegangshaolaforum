<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_video_fragment_listview_linareout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/id_video_fragment_listview_videoabbre"
        android:src="@drawable/profile_bg"
        android:scaleType="centerCrop"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_height="200dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/id_video_fragment_listview_textabbre"
            android:text=""
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/id_video_fragment_listview_views"
            android:text=""
            android:textColor="#201aa8"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
