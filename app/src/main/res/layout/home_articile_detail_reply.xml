<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/id_home_article_detail_reply_imgid"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_gravity="top"
            />

        <LinearLayout
            android:layout_weight="13"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_home_article_detail_reply_ip"
                android:text=""
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textColor="#081452"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_home_article_detail_reply_message"
                android:lineSpacingMultiplier="1.3"
                android:text=""
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="#373434"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <!--  填充 home_article_detail_replyinner.xml  -->
                <com.yuegangshaola.common.ListViewForScrollView
                    android:id="@+id/id_home_article_detail_reply_replies"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.yuegangshaola.common.ListViewForScrollView>

            <TextView
                android:textColor="#710b0b"
                android:layout_gravity="right"
                android:text="回复本评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="#dededb"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
