<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ff0202"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/id_home_search_back"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/id_home_search_edittext"
            android:layout_marginRight="68dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:layout_width="200dp"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/id_home_search_button"
            android:textAlignment="center"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="#040000"
            android:textSize="13dp"
            android:text="搜 索"
            android:layout_width="60dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="50dp"
        android:padding="8dp"
        android:id="@+id/id_home_search_status"
        android:text="输入1~2个字的简短关键词搜索，如搜索：皮水，脆皮，上色，配方等找到相关文章"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/id_home_search_listview"
        android:background="#e9e7e7"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>


</RelativeLayout>
